#!/bin/bash
# sandbox-run: Run any command inside Chrome's seccomp-BPF sandbox.
#
# Your current directory is the workspace (bind-mounted read-write).
# All isolation layers active: namespaces, chroot, caps, seccomp-BPF.
#
# Usage:
#   sandbox-run claude                      # Claude Code, sandboxed
#   sandbox-run python3                     # Python REPL, sandboxed
#   sandbox-run --network curl example.com  # With network access
#   sandbox-run --help                      # Full usage

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
exec python3 "$SCRIPT_DIR/sandbox_claude.py" "$@"
